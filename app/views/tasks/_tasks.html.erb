<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <div class="media-body">
        <div>
          <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          <%= link_to task.content, task_path(task) %> <%= task.status %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>